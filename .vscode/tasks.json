{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "cppbuild",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-I",
                "${workspaceFolder}/include",
                "-o",
                "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe",
                // "${fileDirname}\\${workspaceRootFolderName}.exe",
                "-L",
                "${workspaceFolder}/lib",
                "-lglad",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32",
                "-luser32",
                "-lkernel32",
                "-lshell32",
                "-lmsvcrt",
                "-lstdc++",
                "-mwindows",
                "-Wall",
                "-static-libgcc",
                "-fexec-charset=GBK",
                "-std=c++17"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task generated by Debugger."
        },
        {
            "label": "run",
            "type": "shell",
            "dependsOn": "build",
            "command": "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}